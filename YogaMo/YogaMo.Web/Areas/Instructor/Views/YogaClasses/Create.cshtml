@model YogaClassCreateVM

@{
    ViewData["Title"] = "Create Yoga Class";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="YogaId" class="control-label"></label>
                <div class="position-relative">
                    <select asp-for="YogaId" class="form-control d-inline-block" asp-items="ViewBag.YogaId"></select>
                    <a asp-action="Create" asp-controller="YogaTypes" class="text-white text-md align-middle position-absolute" style="right: 20px; bottom: 7px;">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="InstructorId" class="control-label"></label>
                <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.InstructorId" disabled></select>
            </div>
            <div class="form-group">
                <label asp-for="YogaHallId" class="control-label"></label>
                <select asp-for="YogaHallId" class="form-control" asp-items="ViewBag.YogaHallId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <select asp-for="Day" class="form-control" asp-items="ViewBag.DaysOfWeek"></select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="TimeFrom" class="control-label">Time</label>
                <div>
                    <input asp-for="TimeFrom" class="form-control" style="width: 49%; display:inline-block;" />
                    <input asp-for="TimeTo" class="form-control" style="width: 49%;  display:inline-block;" />
                </div>
                <span asp-validation-for="TimeFrom" class="text-danger"></span>
                <span asp-validation-for="TimeTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
