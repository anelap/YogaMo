@model IEnumerable<YogaMo.WebAPI.Database.Instructor>


@{
    ViewData["Title"] = "Instructors";
    Layout = "_LayoutShop";
}

<div class="mt-3 d-none d-md-block"></div>

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="row text-center" style="margin-top: 20px">

    @foreach (var item in Model)
    {
        <!-- Team item -->
        <div class="col-xl-3 col-sm-6 mb-5">
            <div class="bg-white rounded shadow-sm py-5 px-4">
                <div class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm team-item" style="background-image: url('/Picture/Instructor/@item.InstructorId');">
                </div>
                <h5 class="mb-0">@item.FullName</h5><span class="small text-uppercase text-muted">Instructor</span>
                <ul class="list-unstyled mt-3" style="font-size: 0.92rem;">
                    <li>@Html.DisplayFor(modelItem => item.Email)</li>

                    <li>@Html.DisplayFor(modelItem => item.Phone)</li>
                </ul>
            </div>
        </div><!-- End -->

    }
    <!--foreach end-->
</div>

<div class="mt-5 d-none d-md-block"></div>

@section Scripts {
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
}