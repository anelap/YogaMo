@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    string error_message = TempData["error_message"] as string;
}

@if (error_message != null)
{
    <p class="text-danger login-box-msg">@error_message</p>
}
else
{
    <p class="login-box-msg">Sign in to start your session</p>
}

<form asp-action="Login" method="post">
    <div class="input-group mb-3">
        <input class="form-control" asp-for="Username" placeholder="Username">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-user"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <input class="form-control" asp-for="Password" placeholder="Password">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="icheck-primary">
                <input type="checkbox" asp-for="RememberMe">
                <label asp-for="RememberMe">
                    Remember Me
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </div>
        <!-- /.col -->
    </div>
</form>

<p class="mb-1">
    <a href="forgot-password.html">I forgot my password</a>
</p>
<p class="mb-0">
    <a asp-action="Index" asp-controller="Register" class="text-center">Register a new membership</a>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
